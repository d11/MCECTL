	 // {
	//if( test_table[(j-1)*symbolcount + i].evaluate(k) != table[(j-1)*symbolcount + i].evaluate(k))
	//	indic=0;
	 // }
	 //if(indic==1)cout<<"equiv\n";  
	
//	}
//}
*/
/*------------------------------------------------------------------------------------------*/
//cout<<"\ntotal time sim2ing :\t"<<sim2tot;
//cout<<"\ntotal time simplifying :\t"<<sim_tot;



//time(&end);

//out_time("TOTAL: ", beg, end);


}	







