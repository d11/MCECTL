//      {
	
//        cout<<"\nnum terms in f.sim: "<<table[(j-1)*symbolcount + i].numterms();
//	cout<<"\nnum terms in f.sim2: "<<test_table[(j-1)*symbolcount + i].numterms();
//	cout<<"\ntruth table comparison for g"<<symbol[i]<<j<<":";
	
//	int indic=1;
